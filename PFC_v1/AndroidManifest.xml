<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pfc_v1"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        
        <!-- Actividad de la pantalla de inicio -->
        <activity
            android:name="com.example.pfc_v1.IniAct"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        
        <!-- Actividad para LOGIN de Usuarios -->
        <activity
            android:name="com.example.pfc_v1.LoginAct"
            android:label="@string/title_activity_login_act"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        
        <activity
            android:name="com.example.pfc_v1.NewPlayer"
            android:label="@string/title_activity_new_player"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        
        <activity
            android:name="com.example.pfc_v1.DeletePlayer"
            android:label="@string/title_activity_delete_player"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        

        <!-- Actividad de la pantalla de menú -->
        <activity
            android:name="com.example.pfc_v1.MenuAct"
            android:label="@string/menu" >
            <intent-filter>
                <action android:name="android.intent.action.MENUACT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <!-- Menú para acerca de y configuración -->
        <activity
            android:name="com.example.pfc_v1.MainMenu"
            android:label="@string/title_activity_main_menu"
            android:theme="@android:style/Theme.Holo.NoActionBar" >
        </activity>
        
        <activity
            android:name="com.example.pfc_v1.AboutText"
            android:label="@string/title_activity_about_text"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        
        
        
        <!-- Actividad de reloj de cocina -->
        <activity
            android:name="com.example.pfc_v1.ChronoAct"
            android:label="@string/chrono" >
            <intent-filter>
                <action android:name="android.intent.action.CHRONOACT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>